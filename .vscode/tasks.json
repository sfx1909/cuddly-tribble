{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Just: build",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                    "CMAKE_BUILD_TYPE": "Debug"
                }
            },
            "command": "sh",
            "args": [
                "-c",
                "command -v nix &>/dev/null && nix-shell ./shell.nix --command 'just build' || just build"
            ]
        }
    ]
}